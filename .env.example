# =============================================================================
# MORTALITY SIGNALS - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Tableau Cloud Configuration
# -----------------------------------------------------------------------------
# Get these from your Tableau Cloud Connected App settings
TABLEAU_BASE_URL=https://sso.online.tableau.com
TABLEAU_SITE_CONTENT_URL=your-site-name
TABLEAU_CLIENT_ID=your-client-id-here
TABLEAU_SECRET_ID=your-secret-id-here
TABLEAU_SECRET_VALUE=your-secret-value-here

# Tableau Embed Settings
TABLEAU_EMBED_TOKEN_EXPIRY_MINUTES=10

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Data Paths
# -----------------------------------------------------------------------------
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_ENRICHED_PATH=./data/enriched

# -----------------------------------------------------------------------------
# AI/ML Settings
# -----------------------------------------------------------------------------
ANOMALY_ZSCORE_THRESHOLD=2.5
FORECAST_HORIZON_YEARS=5

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_TABLEAU_EMBED_URL=https://your-site.online.tableau.com
